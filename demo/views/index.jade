extends layout

block content
    .page-content(ng-app="ValidationDemo")
        h1= title
        .person-form(ng-controller="DemoCtrl")
            form(action="#", method="get", name="DemoForm", val-form, val-submit="submitForm(form)")
                .row
                    .input-group.col-12
                        label Last Name
                        input.full-width(type="text", autocomplete="off", name="LastName", ng-model="lastName", val-required="Please specify")
                .row
                    .input-group.col-12
                        label Telephone
                        input.full-width(type="text", autocomplete="off", name="Telephone", ng-model="telephone", val-required="Please specify", val-telephone="Bad phone number")
                .row
                    .input-group.col-6
                        label Code
                        input(type="text", autocomplete="off", name="Postcode", ng-model="postcode", size="6", val-code="Invalid postcode", val-code-length="4")
                    .input-group.col-6
                        label Text Length
                        input.full-width(type="text", autocomplete="off", name="Postcode", ng-model="pitchiTitle", size="6", val-length="Please enter text from 4 to 10 characters", val-watch, val-length-min="4", val-length-max="10")
                .row
                    .input-group.col-6
                        label Number
                        input(type="text", autocomplete="off", ng-model="age", size="6", val-number="Invalid age")
                    .input-group.col-6
                        label Number (Float)
                        input(type="text", autocomplete="off", ng-model="average", size="8", val-number="Invalid average", val-number-type="float")
                .row
                    .input-group
                        label Colour
                        .radio-button-group
                            input(type="radio", val-radio="Specify colour", ng-model="colour", value="red", id="Colour-Red")
                            label(for="Colour-Red") Red
                        .radio-button-group
                            input(type="radio", ng-model="colour", value="blue", id="Colour-Blue")
                            label(for="Colour-Blue") Blue
                        .radio-button-group
                                input(type="radio", ng-model="colour", value="yellow", id="Colour-Yellow")
                                label(for="Colour-Yellow") Yellow
                        .radio-button-group
                            input(type="radio", ng-model="colour", value="green", id="Colour-Green")
                            label(for="Colour-Green") Green

                        .radio-button-group
                            span.colour-box(ng-class="[colour]")

                .row
                    .input-group
                        label Meal options
                        .checkbox-button-group
                            input(type="checkbox", val-checkbox-group="Specify food", ng-model="food[0]", ng-true-value="Chicken", id="Food-Chicken")
                            label(for="Food-Chicken") Chicken
                        .checkbox-button-group
                            input(type="checkbox", ng-model="food[1]", ng-true-value="Beef", id="Food-Beef")
                            label(for="Food-Beef") Beef
                        .checkbox-button-group
                            input(type="checkbox", ng-model="food[2]", ng-true-value="Pork", id="Food-Pork")
                            label(for="Food-Pork") Pork
                        .checkbox-button-group
                            input(type="checkbox", ng-model="food[3]", ng-true-value="Fish", id="Food-Fish")
                            label(for="Food-Fish") Fish
                        .checkbox-button-group
                            p="{{food}}"

                .row
                    .input-group
                        .checkbox-button-group
                            input(type="checkbox", val-checkbox="Please specify", ng-model="termsAndConditions", id="Terms")
                            label(for="Terms") I have read the terms and conditions


                .form-actions
                    button(type="submit", class="btn btn-primary") Submit

block scripts
    script(src="/javascripts/validation.js")
    script(src="/javascripts/demo.js")
